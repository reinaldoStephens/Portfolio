---
const menuitems = [
    {
        title: "About",
        path: "#about",
        ariaLabel: "Navigation about link",
    },
    {
        title: "Experience",
        path: "#experience",
        ariaLabel: "Navigation experience link",
    },
    {
        title: "Projects",
        path: "#projects",
        ariaLabel: "Navigation projects link",
    },
    {
        title: "Contact",
        path: "#contact",
        ariaLabel: "Navigation contact link",
    },
];
---

<nav id="desktop-nav">
    <div class="logo">Reinaldo Stephens</div>
    <div>
        <ul class="nav-links">
            {
                menuitems.map((item) => (
                    <>
                        <li>
                            <a aria-label={item.ariaLabel} href={item.path}>
                                {item.title}
                            </a>
                        </li>
                    </>
                ))
            }
        </ul>
    </div>
</nav>
<nav id="hamburger-nav">
    <div class="logo">Reinaldo Stephens</div>
    <div class="hamburger-menu">
        <div class="hamburger-icon">
            <span></span>
            <span></span>
            <span></span>
        </div>
        <div class="menu-links">
            {
                menuitems.map((item) => (
                    <>
                        <li>
                            <a class="hamburguer-nav-link" aria-label={item.ariaLabel} href={item.path}>
                                {item.title}
                            </a>
                        </li>
                    </>
                ))
            }
        </div>
    </div>
</nav>
<script>
    function toggleMenu() {
        const menu = document.querySelector(".menu-links");
        const icon = document.querySelector(".hamburger-icon");
        menu?.classList.toggle("open");
        icon?.classList.toggle("open");
    }

    const buttons = document.querySelectorAll("a.hamburguer-nav-link");
    const hamburgerIcon = document.querySelector("div.hamburger-icon");

    // Add event listeners when a link is clicked.
    buttons.forEach((button) => {
        button.addEventListener("click", () => toggleMenu());
    });

    hamburgerIcon?.addEventListener("click", () => toggleMenu());
</script>
<style>
    /* Desktop nav */

    .logo {
        font-size: 2rem;
    }

    .logo:hover {
        cursor: default;
    }

    /* Hamburger Menu */

    .hamburger-menu {
        position: relative;
        display: block;
    }

    .hamburger-icon {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 24px;
        width: 30px;
        cursor: pointer;
    }

    .hamburger-icon span {
        width: 100%;
        height: 2px;
        background-color: black;
        transition: all 0.3 ease-in-out;
    }

    .menu-links {
        position: absolute;
        top: 100%;
        right: 0;
        background-color: white;
        max-height: 0;
        overflow: hidden;
        transition: all 0.3 ease-in-out;
    }

    .menu-links a {
        display: block;
        padding: 10px;
        text-align: center;
        font-size: 1.5rem;
        color: black;
        text-decoration: none;
        transition: all 0.3 ease-in-out;
    }

    .menu-links li {
        list-style: none;
    }

    .menu-links.open {
        max-height: 300px;
    }

    .hamburger-icon.open span:first-child {
        transform: rotate(45deg) translate(10px, 5px);
    }

    .hamburger-icon.open span:nth-child(2) {
        opacity: 0;
    }

    .hamburger-icon.open span:last-child {
        transform: rotate(-45deg) translate(10px, -5px);
    }

    .hamburger-icon span:first-child {
        opacity: 1;
    }

    .hamburger-icon span:first-child {
        opacity: 1;
        transform: none;
    }
</style>
